<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Projeto_Agenda.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Projeto_Agenda"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Agenda de Atividades"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" 
            Icon="agenda.png"/>
        <ShellContent
            Title="Dados do Dia"
            ContentTemplate="{DataTemplate local:DadosDia}"
            Route="DadosDia" 
            Icon="dia.png"/>
    </TabBar>

</Shell>
